<?xml version="1.0" encoding="utf-8"?>
<s:WindowedApplication xmlns:fx="http://ns.adobe.com/mxml/2009" 
					   xmlns:s="library://ns.adobe.com/flex/spark" 
					   xmlns:mx="library://ns.adobe.com/flex/mx" 
					  
					   width="800" height="600" xmlns:local="*" xmlns:components="components.*"
					   >
	<fx:Declarations>
		<!-- 将非可视元素（例如服务、值对象）放在此处 -->
	</fx:Declarations>

	
	<s:BorderContainer width="100%" height="100%" id="mainContainer" 
					   styleName="container">
		<s:VGroup width="100%" height="100%" gap="50" 
				  horizontalAlign="center" verticalAlign="middle">
			<s:Group id="tabBarPanel"
					 width="95%" height="95%">
				<s:layout>
					<s:VerticalLayout gap="0" />	
				</s:layout>
				<s:TabBar id="tabs" dataProvider="{viewStack}"/>
				<mx:ViewStack id="viewStack" width="100%" height="100%">
					<s:NavigatorContent label="图片加水印"  width="100%" height="100%">
						<s:BorderContainer width="100%" height="100%" >
							<components:WaterMarkComp/>
						</s:BorderContainer>
					</s:NavigatorContent>
					<s:NavigatorContent label="视频加片头片尾"  width="100%" height="100%">
						<s:BorderContainer width="100%" height="100%">
							<components:VideoConcat/>
						</s:BorderContainer>
					</s:NavigatorContent>
				</mx:ViewStack>						
			</s:Group>
		</s:VGroup>	 
	</s:BorderContainer>	
</s:WindowedApplication>
